
# terminal emulator
super + Return
	kitty	


# program launcher
super + s
	rofi -i -show drun -modi drun -show-icons

super + shift +d 
	$HOME/.config/bspwm/rofi/bin/asroot
super + e
	rofi -show emoji
# make sxhkd reload its configuration files:
super + Escape
	pkill -USR1 -x sxhkd

# Open sxhkdrc config file
super F1
	kitty -e nano ~/.config/sxhkd/sxhkdrc

# restart bspwm
super F2
	bspc wm -r

# quit bspwm
super + shift + e
    bspc quit

# close and kill
super + shift + q
	bspc node -c

#focus on workspace
super + {1-9,0}
	bspc desktop -f '^{1-9,10}' 

#Move window to selected workspace (in one workspace use arrows)
super + shift + {1-9,0}
	bspc node -d ^{1-9,10}

alt + Tab
    bspc node -f last

ctrl + alt + Escape
    xkill

super + {h,v,q}
	bspc node -p {east,south,cancel}

super + ctrl + {1-9}
	bspc node -o 0.{1-9}

super + f
	bspc node -t "~"fullscreen

super + space
    bspc node -t "~"{floating,tiled}

super + shift + space
	bspc node -g {marked,locked,sticky,private}

super + {_,shift + }{Left,Down,Up,Right}
	bspc node -{f,s} {west,south,north,east}

super + alt + {Left,Right,Up,Down}
	bspc node -z {left 20 0,right -20 0,top 0 20,bottom 0 -20}

super + control + {Left,Right,Up,Down}
	bspc node -z {left -20 0,right 20 0,top 0 -20,bottom 0 20}

alt + shift + {Left,Down,Up,Right}
	bspc node -v {-20 0,0 20,0 -20,20 0}

	
# ========== User-specific ==========
# ===================================

super + w
	firefox &	
super + r
	thunar &
super + x
    betterlockscreen -l

super + shift + i
		launchspotify &
super + c
    code

super + shift + s
    flameshot gui


# Screen brightness control
XF86MonBrightnessDown
    sudo xbacklight -dec 10
XF86MonBrightnessUp
    sudo xbacklight -inc 10
# Volume control
XF86AudioRaiseVolume
    pactl set-sink-volume $(pactl info | grep alsa_output | sed -r 's/^Default Sink: //') +5%
XF86AudioLowerVolume
    pactl set-sink-volume $(pactl info | grep alsa_output | sed -r 's/^Default Sink: //') -5%
XF86AudioMute
    pactl set-sink-mute $(pactl info | grep alsa_output | sed -r 's/^Default Sink: //') toggle

XF86Audio{Next,Prev,Play,Stop}
	playerctl --all-players {next,previous,play-pause,stop}
